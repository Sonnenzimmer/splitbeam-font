<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>splitbeam â€“ font</title>
        <meta name="description" content="test, font">
        <meta name="viewport" content="width=device-width">

        <!-- the css for the font -->
        <link rel="stylesheet" href="css/main.css">

        <!-- inline css for the pageview -->
        <style type="text/css">

            *,
            *:before,
            *:after {
              -webkit-box-sizing: border-box;
                 -moz-box-sizing: border-box;
                      box-sizing: border-box;
            }

            html, body {
                font-size: 1em;
                line-height: 1.4;
                font-family: Lucida Console, Monaco, monospace;
                padding: 40px;
            }

            ul {
                list-style: none outside none;
                margin: 0;
                padding: 0;
                width: 1000px;
            }

            li {
                border: 1px solid #DDDDDD;
                float: left;
                font-size: 12px;
                height: 125px;
                line-height: 1.4;
                margin: 0 -1px -1px 0;
                padding: 10px;
                text-align: left;
                width: 12.5%;
            }
            li.wide {
                width: 25%;
            }

            h4 {
                text-transform: uppercase;
                clear: both;
                padding-top: 2em;
                margin-bottom: 0.6em;
            }

            li span.sb-glyphicons {
                display: block;
                font-size: 48px;
                line-height: 1;
                position: relative;
                margin: 5px auto 10px;
            }

            span.glyphinfo {
              font-size: 10px;
              display: block;
            }

            #colorEye {
                color: #000;
            }
            #colorBeam {
                color: #f00;
            }
            #colorFill {
                color: #0f0;
            }
            li.big span.sb-glyphicons {
                font-size: 135px;
                display: inline-block;
            }
            li.big span.sb-glyphicon-fontversion {
                font-size: 110px;
                position: absolute;
                padding-left: 135px;
            }
            .example {
                font-family: 'Splitbeam';
                font-size: 140px;
                line-height: 100%;
                margin: 0;
                padding: 0;
            }

            .kern {
                font-feature-settings: "kern";
                /* vendor-prefixes */
                -moz-font-feature-settings: "kern=1";
                -ms-font-feature-settings: "kern";
                -webkit-font-feature-settings: "kern";
                -o-font-feature-settings: "kern";

                text-rendering: optimizeLegibility; /* force Safari to use the kerning */
            }
            .calt {
                font-feature-settings: "calt";
                /* vendor-prefixes */
                -moz-font-feature-settings: 'calt=1';
                -ms-font-feature-settings: "calt";
                -webkit-font-feature-settings: "calt";
                -o-font-feature-settings: "calt";
            }

        </style>

    </head>
    <body>
        
        
        <h3>splitbeam Font-Test</h3>
        
        <h4>Example</h4>
        <p><span class="example">Splitbeam</span> v1.008</p>
        <p><span class="example kern">TYJFJLVI</span> KERN&nbsp;&nbsp;&nbsp; </p>
        <p><span class="example">TYJFJLVI</span> NO KERN </p>


        <h4>Special glyphs</h4>
        <ul>
            {{#each Splitbeam-Regular.classes}}
                {{#is name "printCSS"}}
                    {{#each chars}}
                        <li class="wide">
                            <span class="sb-glyphicons sb-glyphicon-{{dashify name}}" data-unicode="{{unicodeHex}}"></span>
                            <span class="glyphinfo">CSS-Classes:</span> 
                            <span class="glyphinfo">.sb-glyphicons</span> 
                            <span class="glyphinfo">.sb-glyphicon-{{dashify name}}</span> 
                        </li>
                    {{/each}}
                {{/is}}
            {{/each}}


                    <li class="wide big">
                        <span class="sb-glyphicons"><span class="sb-glyphicon-fontversion" data-unicode="E000"></span><span id="colorEye">&#xE004;</span><span id="colorBeam">&#xE006;</span><span id="colorFill">&#xE008;</span></span>
                    </li>
        </ul>




        <h4>Unicode glyphs</h4>
        <ul>

            {{#each Splitbeam-Regular.chars}}
                {{> chart}}
            {{/each}}
        </ul>

    </body>
</html>
