/* ==========================================================================
   Definition of the font
   ========================================================================== */

@font-face {
  font-family: 'Splitbeam';
  font-style: normal;
  font-weight: 400;
    src: url('../fonts/splitbeam-webfont.eot');                                    /* IE 9 Compatibility Mode */
    src: url('../fonts/splitbeam-webfont.eot?#iefix') format('embedded-opentype'), /* IE < 9 */
         url('../fonts/splitbeam-webfont.woff') format('woff'),                    /* Firefox >= 3.6, any other modern browser */
         url('../fonts/splitbeam-webfont.ttf') format('truetype'),                 /* Safari, Android, iOS */
         url('../fonts/splitbeam-webfont.svg#Splitbeam') format('svg');            /* Chrome < 4, Legacy iOS */
}

/* ==========================================================================
   Styling for all icons
   ========================================================================== */
.sb-glyphicons {
    display: inline-block;
    font-family: 'Splitbeam';
    font-style: normal;
    font-weight: normal;
}

/* ==========================================================================
   Styling for individual icons
   ========================================================================== */
{{#each Splitbeam-Regular.chars}}
    {{#if private}}
        {{#unless fitted}}
        {{! the uppercase is just a crude way of escaping...}}
.sb-glyphicon-{{name}}:before {
  content: "{{uppercase '\'}}{{unicodeHex}}";
}
        {{/unless}}
    {{/if}}
{{/each}}
